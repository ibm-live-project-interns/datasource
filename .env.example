# ============================================
# DATASOURCE SERVICE - Environment Configuration
# ============================================
# Copy this file to .env and update values for your environment

# ============================================
# REQUIRED: Ingestor Core Connection
# ============================================
# The URL where Ingestor Core is running (REQUIRED)
# Production: http://noc-ingestor-core:8001
# Local Dev: http://localhost:8001
INGESTOR_CORE_URL=http://localhost:8001

# ============================================
# DATABASE (PostgreSQL) - DEPRECATED
# ============================================
# These settings are deprecated - datasource now sends events via HTTP to Ingestor Core
# They are kept for backwards compatibility only and are NOT USED
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret
POSTGRES_DB=noc_alerts
POSTGRES_SSL_MODE=disable

# Connection Pool (DEPRECATED)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=5

# ============================================
# DOWNSTREAM SERVICES (DEPRECATED)
# ============================================
# This was redundant with INGESTOR_CORE_URL above
# INGESTOR_CORE_URL=http://localhost:8001

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
